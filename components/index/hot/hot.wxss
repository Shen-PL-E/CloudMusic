/* components/index/hot/hot.wxss */
.hottop{
  font-size: 34rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  color:#f6ce55;
  text-align: center;
}
.cont{
  display: flex;
  position: relative;
}
.cont .left{
  width: 300rpx;
  text-align: center;
  line-height: 300rpx;
  color: aliceblue;
  font-size: 60rpx;
  font-weight: 600;
}
.cont .right{
  position: absolute;
  right: 0;
  top: 0;
  background: #333333;
  box-sizing: border-box;
  padding:  30rpx;
  font-size: 28rpx;
  color:#868686;
  width: 60%;
}

.cont .right .right-cont{
  margin: 20rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}