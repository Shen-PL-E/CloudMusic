.detail {
  position: relative;
}
.detail .songstop {
  position: relative;
}
.detail .songstop image {
  width: 100%;
}
.detail .songstop .mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
}
.detail .songstop .play {
  width: 300rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ecc753;
  background-color: rgba(0, 0, 0, 0);
  border: 1px solid #ecc753;
  border-radius: 50rpx;
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}
.detail .songscon {
  position: absolute;
  top: 500rpx;
}
.detail .songscon .songsitem {
  padding: 20rpx;
  box-sizing: border-box;
  color: #838283;
  font-size: 33rpx;
  background: #222;
  border-bottom: 2rpx solid #333;
}
.detail .songscon .songsitem .songstit {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 20rpx 0;
}
