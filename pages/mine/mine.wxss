/* pages/mine/mine.wxss */
.login{
  width: 100%;
  height: 350rpx;
  padding: 110rpx 0;
  box-sizing: border-box;
  background-color: #364943;
  text-align: center;
}
.img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.nic{
  font-size: 35rpx;
  color:#d9d9d9;
}

.formlist{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.formitem{
  width: 100%;
  padding: 30rpx 0;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #3f3f3f;
  color:#d9d9d9;
  font-size: 30rpx;
}
.icon{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top:50%;
  right:25rpx;
  transform: translateY(-50%);
}