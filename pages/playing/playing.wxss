.swp {
  width: 100%;
  text-align: center;
  height: 700rpx;
  padding-top: 40rpx;
}
.swp .wx-swiper-dot {
  height: 20rpx;
  width: 20rpx;
  border-radius: 20rpx;
}
.swp .wx-swiper-dot-active {
  width: 60rpx;
}
.top {
  width: 100%;
  text-align: center;
}
.top .tit {
  font-size: 40rpx;
  color: #FFF;
  margin-top: 15rpx;
}
.top .singer {
  color: #a9a9a9;
  font-size: 34rpx;
  margin-top: 15rpx;
}
.top .img-bg {
  width: 100%;
  height: 550rpx;
  background-size: 100%;
  filter: blur(30rpx);
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.top image {
  width: 400rpx;
  height: 400rpx;
  border: 10rpx solid #FFF;
  margin-top: 40rpx;
  border-radius: 50%;
}
.musicprog {
  width: 100%;
  margin: 50rpx 0 30rpx 0;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
}
.time {
  color: #a8a8a8;
  font-size: 30rpx;
  line-height: 38px;
}
.prog {
  width: 70%;
}
